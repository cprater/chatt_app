<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <%if session[:current_user]%>
  	<a href="/logout">Logout</a>
  	<a href="/profile/<%=session[:current_user]%>">Profile</a>
  <%else%>
  	<a href="/login">Login</a>
    <a href="/new/user">Register</a>
  <%end%>
  


  <div class="list-rooms">
  	<h3>Join a public room</h3>
  	<ul>
  		<%@chatrooms.each do |room|%>
  			<li><a href='/chatroom/<%=room.id%>'><%=room.name%></a></li>
  		<%end%>
		</ul>
  </div>
</div>
